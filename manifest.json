{
    "name": "My first Ext.",
    "description": "Build an Extension!",
    "version": "1.0",
    "manifest_version": 3 ,
    "background": {
      "service_worker": "main.js"
    },
    "permissions": ["storage","activeTab"],
    "action": {
      "default_popup": "index.html"
    },
   "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["taskManager.js", "weather.js"]
        }
    ]
}
  
